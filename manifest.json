{
  "manifest_version": 2,

  "name": "Defender against privacy attacks",
  "description": "This extensions defends against various privacy attacks which happens while you browse on the internet.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons" : {
    "64": "icon.png"
  },
  "background" : {
    "scripts" : ["background.js"],
    "page": "/html/background.html",
    "persistent": true
  },
  "chrome_url_overrides":{
    "newtab"  : "newtab.html"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["/js/inject/content.js"],
      "matches": ["*://*/*"],
      "js": ["options.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "browsingData",
    "contentSettings",
    "<all_urls>",
    "webRequest", "webRequestBlocking", "*://*/*", "storage", "tabs"
  ]
}
